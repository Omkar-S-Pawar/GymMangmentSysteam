@model GSM.Service.ViewModel.vwTraninerInfo
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update Traniner";
}

<div class="pagetitle">
    <h1>Update Traniner</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Traniner</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section contact">
    <div class="col-xl-12">
        <div class="card p-4">
            <form asp-area="" asp-controller="Traniner" asp-action="Update">
                <input type="hidden" asp-for="Id" />
                <div class="row gy-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Gender" class="control-label"></label>  <br />
                        @Html.RadioButton("Gender", "1")  Male &nbsp;&nbsp;
                        @Html.RadioButton("Gender", "2")  Female &nbsp;&nbsp;
                        @Html.RadioButton("Gender", "3")  Other
                    </div>
                    <div class="col-md-2">
                        <br />
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" checked="true" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <div class="col-md-3">
                        <br />
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-area="" asp-action="Index" class="btn btn-secondary">Back To List</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
    }
