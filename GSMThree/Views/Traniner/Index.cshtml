@model IEnumerable<GSM.Service.ViewModel.vwTraninerInfo>

@{
    ViewData["Title"] = "Traniner";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Traniners</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Traniners</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section contact">
    <div class="col-xl-12">
        <div class="card p-4">
            <div class="row gy-4">
                <table id="example" class="table table-striped">
                    <thead>

                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.CreateAt)
                            </th>
                            <th scope="col">
                                <a asp-action="Create" asp-controller="Traniner" class="btn btn-primary">Create New</a>
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr class="text-center">
                                <td colspan="5"> Records not found </td>
                            </tr>
                        }
                        else
                        {
                            int no = 1;
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@no</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @if (item.Gender == 1)
                                        {
                                            <label>Male</label>
                                        }
                                        else if (item.Gender == 2)
                                        {
                                            <label>Female</label>
                                        }
                                        else
                                        {
                                            <label>Other</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <label>Active</label>
                                        }
                                        else
                                        {
                                            <label>InActive</label>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateAt)
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a> |
                                        <a href="@Url.Action("Delete", new { id = item.Id })" style="color :red;" onclick="return confirm ('Are you sure want to delete ?');">
                                            <i class="bi bi-x-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                                no++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>