    <div class="container mt-5 mb-5">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-md-6">
                <div class="card px-5 py-5">
                    <h3 class="mt-3">Gym Mangment Systeam</h3>
                    <h5 class="mt-3">Login Here</h5>
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-input">
                            <i class="fa fa-envelope"></i>
                            <input type="text" asp-for="Email" class="form-control" placeholder="your@email.com" autofocus required pattern="[a-zA-Z0-9._%+-]+@@[a-z0-9.-]+\.[a-zA-Z]{2,4}">
                        </div>
                        <div class="form-input text-center">
                            <i class="fa fa-lock"></i>
                            <input type="password" asp-for="Password" class="form-control"  autofocus required placeholder="password">
                        </div>
                        <div class="text-center">
                              <input type="submit" value="Login" class="btn btn-primary mt-4 signup" />
                         </div>
                        <div class="text-center mt-4"> <span>Create Your Account?</span> <a asp-controller="Account" asp-action="Signup"  class="text-decoration-none">Sign Up Here</a> </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

