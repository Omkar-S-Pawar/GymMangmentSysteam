@model GSM.DAL.Models.User
@{
    <script>
        function ValidateRadioButton() {
            var rbtDetail = document.getElementsByName("Gender");
            var isValid = false;
            for (var i = 0; i < rbtDetail.length; i++) {
                if (rbtDetail[i].checked) {
                    isValid = true;
                    break;
                }
            }
            if (isValid == false) {
                 alert("Error : Pleae select Gender option");
                  return false;
            }
            else {

                 return true;
            }
        }
    </script>
  //  Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h1>Create User</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">User</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section contact">
    <div class="col-xl-12">
        <div class="card p-4">
            <form asp-action="Create">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col">
                        <label asp-for="Name" class="control-label "></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="Password" class="control-label"></label>
                        <input type="password" asp-for="Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" required />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Gender" class="control-label"></label>  <br />
                        @Html.RadioButton("Gender", "1")  Male &nbsp;&nbsp;
                        @Html.RadioButton("Gender", "2")  Female &nbsp;&nbsp;
                        @Html.RadioButton("Gender", "3")  Other
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="Traniner" class="control-label"></label>
                        @Html.DropDownListFor(Model => Model.TrainnerId, new SelectList(ViewBag.TraninersList, "Id", "Name"),
                        "Select Traniner", new { id = "ddlTraniners", @class="form-control"})
                        <span asp-validation-for="TrainnerId" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="PlanId" class="control-label"></label>
                        @Html.DropDownListFor(Model => Model.PlanId, new SelectList(ViewBag.PlanList, "Id", "Name"),
                        "Select Subcription", new { id = "ddlPlan", @class="form-control"})
                        <span asp-validation-for="PlanId" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <br />
                        @Html.CheckBox("isActive", true)    <label asp-for="IsActive" class="control-label"></label>
                    </div>
                    <div class="col-md-3">
                        <br />
                        <input type="submit" value="Create" class="btn btn-primary" onclick="javascript: return ValidateRadioButton();" />
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
                <div class="text-center pt-3">
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
