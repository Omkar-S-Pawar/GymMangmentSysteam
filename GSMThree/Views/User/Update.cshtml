@model GSM.Service.ViewModel.vwUserInfo

@{
    ViewData["Title"] = "Update User";
}

<div class="pagetitle">
    <h1>Users</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Users</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section contact">
    <div class="col-xl-12">
        <div class="card p-4">
            <div class="row gy-4">
                <form asp-action="Update">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="col-md-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                   
                        <div class="col-md-3">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <label asp-for="Age" class="control-label"></label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="TrainnerId" class="control-label"></label>
                            @Html.DropDownListFor(Model => Model.TrainnerId, new SelectList(ViewBag.TraninersList, "Id", "Name"),
                            "Select Traniner", new { id = "ddlTraniners", @class="form-control"})
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Gender" class="control-label mb-2"></label>  <br />
                            @Html.RadioButton("Gender", "1",true)  Male &nbsp;&nbsp;
                            @Html.RadioButton("Gender", "2")       Female &nbsp;&nbsp;
                            @Html.RadioButton("Gender", "3")       Other
                        </div>
                        <div class="col-md-2">
                            <br />
                            @Html.CheckBox("isActive", true)    <label asp-for="IsActive" class="control-label"></label>
                        </div>
                 
                        <div class="col-md-3">
                            <br />
                            <input type="submit" value="Update" class="btn btn-primary" />
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                    <div class="text-center pt-3">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
