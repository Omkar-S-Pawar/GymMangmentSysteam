@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
<ul class="navbar-nav mr-auto">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            @if (User.IsInRole("Admin"))
            {
               <a id="manage" asp-area="Admin" asp-controller="Admin" asp-action="Index" class="nav-link" title="Manage"> Dashboard </a>
            }
            else
            { 
                <a id="manage" asp-area="Member" asp-controller="Home" asp-action="Index" class="nav-link" title="Manage"> Dashboard </a>
            }
        </li>
        <li class="nav-item">
            <a id="manage" href="#" class="nav-link" title="Manage">Hello @User.Identity.Name !</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "User", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Login" asp-controller="Account">Login </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Signup" asp-controller="Account">Register</a>
        </li>
    }
</ul>